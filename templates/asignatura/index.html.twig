{% extends 'base.html.twig' %}

{% block title %}Listado de Asignaturas{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fas fa-book-open me-2"></i>Listado de Asignaturas</h1>
        <a href="{{ path('app_asignatura_new') }}" class="btn btn-custom btn-custom-primary">
            <i class="fas fa-plus me-2"></i>Nueva Asignatura
        </a>
    </div>

    <div class="card card-custom">
        <div class="card-body">
            <table class="table custom-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Curso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for asignatura in asignaturas %}
                    <tr>
                        <td>{{ asignatura.id }}</td>
                        <td>{{ asignatura.nombre }}</td>
                        <td>
                            {% if asignatura.curso %}
                                <span class="badge bg-primary badge-custom">
                                    {{ asignatura.curso.nombre }}
                                </span>
                            {% else %}
                                <span class="text-muted">Sin curso asignado</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_asignatura_show', {'id': asignatura.id}) }}" 
                                   class="btn btn-sm btn-custom btn-custom-secondary me-2">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_asignatura_edit', {'id': asignatura.id}) }}" 
                                   class="btn btn-sm btn-custom btn-custom-primary me-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {{ include('asignatura/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4">No hay asignaturas registradas</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
