{% extends 'base.html.twig' %}

{% block title %}Detalles de Asignatura{% endblock %}

{% block body %}
    <div class="card card-custom">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-book-open me-2"></i>Detalles de Asignatura
            </h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table custom-table">
                    <tbody>
                        <tr>
                            <th class="w-25">ID</th>
                            <td>{{ asignatura.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ asignatura.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Curso</th>
                            <td>
                                {% if asignatura.curso %}
                                    <span class="badge bg-primary badge-custom">
                                        {{ asignatura.curso.nombre }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">Sin curso asignado</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_asignatura_edit', {'id': asignatura.id}) }}" 
                   class="btn btn-custom btn-custom-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
                <a href="{{ path('app_asignatura_index') }}" 
                   class="btn btn-custom btn-custom-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <div class="mt-3">
        {{ include('asignatura/_delete_form.html.twig', {
            'button_label': 'Eliminar Asignatura',
            'button_class': 'btn btn-custom btn-custom-danger w-100'
        }) }}
    </div>
{% endblock %}
