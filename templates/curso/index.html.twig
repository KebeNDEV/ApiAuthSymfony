{% extends 'base.html.twig' %}

{% block title %}Listado de Cursos{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fas fa-book me-2"></i>Listado de Cursos</h1>
        <a href="{{ path('app_curso_new') }}" class="btn btn-custom btn-custom-primary">
            <i class="fas fa-plus me-2"></i>Nuevo Curso
        </a>
    </div>

    <div class="card card-custom">
        <div class="card-body">
            <table class="table custom-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Asignaturas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for curso in cursos %}
                    <tr>
                        <td>{{ curso.id }}</td>
                        <td>{{ curso.nombre }}</td>
                        <td>
                            {% if curso.asignaturas|length > 0 %}
                                {% for asignatura in curso.asignaturas %}
                                    <span class="badge bg-info badge-custom me-1">
                                        {{ asignatura.nombre }}
                                    </span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Sin asignaturas</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_curso_show', {'id': curso.id}) }}" 
                                   class="btn btn-sm btn-custom btn-custom-secondary me-2">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_curso_edit', {'id': curso.id}) }}" 
                                   class="btn btn-sm btn-custom btn-custom-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4">No hay cursos registrados</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
